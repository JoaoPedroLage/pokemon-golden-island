generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  player    Player?
}

model Player {
  id        Int      @id @default(autoincrement())
  name      String
  pokeballs Int      @default(30)
  berries   Int      @default(5)
  pokedex   Pokedex? @relation
  pokedexId Int?     @unique
  userId    Int?     @unique
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Pokedex {
  id               Int       @id @default(autoincrement())
  totalPokemons    Int       @default(0)
  capturedPokemons Pokemon[]
  totalCaptured    Int       @default(0)
  playerId         Int       @unique
  player           Player    @relation(fields: [playerId], references: [id])
}

model Pokemon {
  id        Int     @id @default(autoincrement())
  name      String
  sprite    String
  type      String
  quantity  Int     @default(1)
  pokedexId Int
  pokedex   Pokedex @relation(fields: [pokedexId], references: [id], onDelete: Cascade) // Relacionamento Pokemon -> Pokedex
}
